{
  "name": "svelte-intersection-observer",
  "version": "1.0.0",
  "license": "MIT",
  "description": "Detect if an element is in the viewport using the Intersection Observer API",
  "author": "Eric Liu (https://github.com/metonym)",
  "type": "module",
  "svelte": "./index.js",
  "main": "./index.js",
  "types": "./index.d.ts",
  "exports": {
    ".": {
      "types": "./index.d.ts",
      "svelte": "./index.js"
    },
    "./*.svelte": {
      "types": "./*.svelte.d.ts",
      "import": "./*.svelte"
    },
    "./*": {
      "types": "./*.d.ts",
      "import": "./*.js"
    }
  },
  "scripts": {
    "dev": "rollup -cw",
    "build": "rollup -c",
    "package": "node scripts/npm-package",
    "test:types": "svelte-check --workspace tests",
    "test:e2e": "playwright test",
    "format": "prettier --write '.'"
  },
  "devDependencies": {
    "@playwright/experimental-ct-svelte": "^1.40.1",
    "@playwright/test": "^1.40.1",
    "@sveltejs/vite-plugin-svelte": "^2.4.6",
    "prettier": "^3.1.1",
    "prettier-plugin-svelte": "^3.1.2",
    "svelte": "3.59.1",
    "svelte-check": "^3.6.2",
    "svelte-readme": "^3.6.3",
    "typescript": "^5.3.3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/metonym/svelte-intersection-observer.git"
  },
  "homepage": "https://github.com/metonym/svelte-intersection-observer",
  "bugs": "https://github.com/metonym/svelte-intersection-observer/issues",
  "keywords": [
    "svelte",
    "svelte component",
    "intersection observer",
    "viewport",
    "lazy-loading",
    "conditional"
  ],
  "prettier": {
    "plugins": [
      "prettier-plugin-svelte"
    ]
  }
}
