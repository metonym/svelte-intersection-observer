{
  "compilerOptions": {
    "noEmit": true,
    "checkJs": true,
    "module": "ESNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "verbatimModuleSyntax": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "moduleResolution": "bundler",
    "strict": true,
    "types": ["svelte"],
    "paths": {
      "svelte-intersection-observer": ["./src"],
      "svelte-intersection-observer/*": ["./src/*"]
    }
  },
  "include": ["src", "tests"]
}
